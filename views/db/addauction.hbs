<form action="/addauction" method="post">
  <div class="form-row">
    <label for="firstname">First Name</label>
    <input type="text" name="firstname" id="firstname">
  </div>
  <div class="form-row">
    <label for="tagline">Tagline</label>
    <input type="text" name="tagline" id="tagline" placeholder="Say something fun about yourself!">
  </div>
  <div class="form-row">
    <label for="bio">Bio</label>
    <textarea name="bio" rows="8" id="bio" cols="40"></textarea>
  </div>
  <div class="form-row">
    <label for="reward">Reward</label>
    <textarea name="reward" rows="8" cols="40" id="reward" placeholder="What activities will you do with the winner to make their bid awesome?"></textarea>
  </div>
  <div class="form-row">
    <label for="photo">Photo URL</label>
    <input type="text" name="photo" id="photo" >
  </div>
  <div class="form-row">
    <label for="currentbid">Starting Bid</label>
    <input type="text" name="currentbid" id="currentbid" >
  </div>
  <div class="form-ro">
    <input type="submit" value="Post Auction!">
  </div>
</form>
